<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Penyewa"
    android:background="#F4F4F4">



    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottomcorner5"
        android:paddingBottom="15dp">



        <TextView
            android:id="@+id/textuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Penyewa"
            android:textSize="29sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/warna10" />


        <RelativeLayout
            android:id="@+id/kontainerinfokost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgradius15"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/textuser"
            android:elevation="7dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/kontainernamakost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/namakost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/warna10"
                    android:layout_marginEnd="8dp"
                    />


            </LinearLayout>




            />


            <LinearLayout
                android:id="@+id/kontaineralamatkost"
                android:layout_below="@id/kontainernamakost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ic_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kontainernamakost"
                    android:text=""
                    android:textColor="@color/warna10"
                    android:layout_toEndOf="@id/ic_location"
                    android:textSize="11sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/kontainer_kamar"
                android:layout_below="@id/kontaineralamatkost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ic_kamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kamar_hijau"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/kamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kontainernamakost"
                    android:text=""
                    android:textColor="@color/warna10"
                    android:layout_toEndOf="@id/ic_location"
                    android:textSize="11sp"
                    android:textStyle="bold"/>

            </LinearLayout>




        <LinearLayout
            android:id="@+id/kontainer_tenggat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/kontainer_kamar"
            android:layout_below="@+id/kontaineralamatkost"
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/ic_tenggat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tenggat"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/tenggat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kontainernamakost"
                android:text=""
                android:textColor="@color/warna10"
                android:layout_toEndOf="@id/ic_location"
                android:textSize="11sp"
                android:textStyle="bold"/>
        </LinearLayout>


        </RelativeLayout>




    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_below="@+id/bg"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id" />

            <TextView
                android:id="@+id/textkelolakost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adView"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Dashboard Kost"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/warna10"/>

            <LinearLayout
                android:id="@+id/menubaris1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textkelolakost"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingHorizontal="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp">

                    <ImageButton
                        android:id="@+id/mn_info_kost"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bgmenu"
                        android:src="@drawable/ic_info"
                        android:scaleType="centerInside"
                        android:elevation="7dp"
                        android:contentDescription="Btn1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Kost"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp">

                    <ImageButton
                        android:id="@+id/mn_sosial"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bgmenu"
                        android:src="@drawable/iconpenyewa"
                        android:scaleType="centerInside"
                        android:elevation="7dp"
                        android:contentDescription="Btn2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sosial"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp">

                    <ImageButton
                        android:id="@+id/mn_pengajuan"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bgmenu"
                        android:src="@drawable/ic_pengajuan"
                        android:scaleType="centerInside"
                        android:elevation="7dp"
                        android:contentDescription="Btn3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengajuan"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp">

                    <ImageButton
                        android:id="@+id/mn_infosewa"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bgmenu"
                        android:src="@drawable/ic_infosewa"
                        android:scaleType="centerInside"
                        android:elevation="7dp"
                        android:contentDescription="Btn1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Sewa"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menubaris2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/menubaris1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingHorizontal="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp">

                    <ImageButton
                        android:id="@+id/mnnotifikasi"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bgmenu"
                        android:src="@drawable/ic_notifikasi"
                        android:scaleType="centerInside"
                        android:elevation="7dp"
                        android:contentDescription="Btn2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifikasi"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp">

                    <ImageButton
                        android:id="@+id/mngabung"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bgmenu"
                        android:src="@drawable/ic_joinkost"
                        android:scaleType="centerInside"
                        android:contentDescription="Btn3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join Kost"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:elevation="7dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
