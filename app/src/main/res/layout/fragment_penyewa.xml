<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Penyewa"
    android:background="#F4F4F4">



    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottomcorner5"
        android:paddingBottom="15dp">



        <TextView
            android:id="@+id/textuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Penyewa"
            android:textSize="29sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/warna10" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="15dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/profil"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>




        <RelativeLayout
            android:id="@+id/kontainerinfokost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgradius15"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/textuser"
            android:elevation="7dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/kontainernamakost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/namakost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kost Melati"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/warna10"
                    android:layout_marginEnd="8dp"
                    />


            </LinearLayout>




            />


            <LinearLayout
                android:id="@+id/kontaineralamatkost"
                android:layout_below="@id/kontainernamakost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ic_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kontainernamakost"
                    android:text="Jl. Mahesa, Dusun II Karangrau, Karangrau, Kec. Sokaraja, Kabupaten Banyumas, Jawa Tengah"
                    android:textColor="@color/warna10"
                    android:layout_toEndOf="@id/ic_location"
                    android:textSize="11sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/kontainer_kamar"
                android:layout_below="@id/kontaineralamatkost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ic_kamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kamar"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/kamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kontainernamakost"
                    android:text="Kamar A1"
                    android:textColor="@color/warna10"
                    android:layout_toEndOf="@id/ic_location"
                    android:textSize="11sp"
                    android:textStyle="bold"/>

            </LinearLayout>




        <LinearLayout
            android:id="@+id/kontainer_tenggat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/kontainer_kamar"
            android:layout_below="@+id/kontaineralamatkost"
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/ic_tenggat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tenggat"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/tenggat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kontainernamakost"
                android:text="05-28-2025"
                android:textColor="@color/warna10"
                android:layout_toEndOf="@id/ic_location"
                android:textSize="11sp"
                android:textStyle="bold"/>
        </LinearLayout>


        </RelativeLayout>




    </RelativeLayout>


    <TextView
        android:id="@+id/textnotifikasiterbaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifikasi Terbaru"
        android:layout_below="@id/bg"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/warna10"/>


    <RelativeLayout
        android:id="@+id/notifikasi"
        android:layout_below="@+id/textnotifikasiterbaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bgradius15"
        android:backgroundTint="@color/white"
        android:elevation="7dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ic_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notif"/>

        <TextView
            android:id="@+id/judul_notif"
            android:layout_toEndOf="@+id/ic_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validasi Bukti Pembayaran"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/warna10"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/waktu_notif"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/warna10"
            android:layout_alignParentEnd="true"
            android:text="5/08/2025"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul_notif"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/warna10"
            android:layout_toEndOf="@+id/ic_notif"
            android:text="Fajar Nugroho meminta validasi bukti pembayaran untuk perpanjangan sewa"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/textkelolakost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard Kost"
        android:layout_below="@id/notifikasi"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/warna10"/>


    <LinearLayout
        android:id="@+id/menubaris1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_below="@+id/textkelolakost"
        android:paddingHorizontal="10dp">

        <!-- BTN 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/mn_info_kost"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bgmenu"
                android:src="@drawable/ic_info"
                android:scaleType="centerInside"
                android:contentDescription="Btn1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info Kost"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <!-- BTN 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/mn_sosial"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bgmenu"
                android:src="@drawable/iconpenyewa"
                android:scaleType="centerInside"
                android:contentDescription="Btn2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sosial"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <!-- BTN 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/mn_pengajuan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bgmenu"
                android:src="@drawable/ic_pengajuan"
                android:scaleType="centerInside"
                android:contentDescription="Btn3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengajuan"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <!-- BTN 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/mn_pembayaran"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bgmenu"
                android:src="@drawable/ic_pembayaran"
                android:scaleType="centerInside"
                android:contentDescription="Btn4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembayaran"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menubaris2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="4"
        android:layout_below="@+id/menubaris1"
        android:paddingHorizontal="10dp">

    <!-- BTN 1 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="4dp">

        <ImageButton
            android:id="@+id/mn_infosewa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bgmenu"
            android:src="@drawable/ic_infosewa"
            android:scaleType="centerInside"
            android:contentDescription="Btn1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info Sewa"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <!-- BTN 2 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="4dp">

        <ImageButton
            android:id="@+id/mnnotifikasi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bgmenu"
            android:src="@drawable/ic_notifikasi"
            android:scaleType="centerInside"
            android:contentDescription="Btn2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifikasi"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <!-- BTN 3 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="4dp">

        <ImageButton
            android:id="@+id/mngabung"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bgmenu"
            android:src="@drawable/ic_joinkost"
            android:scaleType="centerInside"
            android:contentDescription="Btn3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Kost"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>
    </LinearLayout>





</RelativeLayout>
