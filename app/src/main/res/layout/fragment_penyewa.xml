<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Penyewa"
    android:background="#F4F4F4">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard Penyewa"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/warna10"
                android:layout_margin="5dp"/>

            <!-- ITEM 1: Info Kost -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_menu">

                <ImageView
                    android:id="@+id/icinfokost"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    android:layout_margin="15dp"/>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/icinfokost">

                    <TextView
                        android:id="@+id/mninfokost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Kost"
                        android:textColor="@color/warna10"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailinfokost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kontak Pemilik, Tentang Kost, Peraturan"
                        android:textColor="@color/warna10"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- ITEM 2: Pengajuan -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_menu">

                <ImageView
                    android:id="@+id/icpenyewa"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pengajuan"
                    android:layout_margin="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/icpenyewa">

                    <TextView
                        android:id="@+id/titlepengajuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengajuan"
                        android:textColor="@color/warna10"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailpengajuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kerusakan dan Perpanjangan Sewa"
                        android:textColor="@color/warna10"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- ITEM 3: Sosial -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_menu">

                <ImageView
                    android:id="@+id/icsosial"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sosial"
                    android:layout_margin="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/icsosial">

                    <TextView
                        android:id="@+id/titlesosial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sosial"
                        android:textColor="@color/warna10"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailsosial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Kontak Penghuni Lain"
                        android:textColor="@color/warna10"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- ITEM 4: Info Sewa -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_menu">

                <ImageView
                    android:id="@+id/icinfosewa"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_sewa"
                    android:layout_margin="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/icinfosewa">

                    <TextView
                        android:id="@+id/titleinfosewa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Sewa"
                        android:textColor="@color/warna10"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailinfosewa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jatuh Tempo, Kontrak Sewa"
                        android:textColor="@color/warna10"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- ITEM 5: Pembayaran -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_menu">

                <ImageView
                    android:id="@+id/icpembayaran"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pembayaran"
                    android:layout_margin="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/icpembayaran">

                    <TextView
                        android:id="@+id/titlepembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pembayaran"
                        android:textColor="@color/warna10"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailpembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bayar, Riwayat dan Tagihan"
                        android:textColor="@color/warna10"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/kostify_logo"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/backgroundmotiflogin"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo,"
        android:layout_margin="10dp"
        android:textSize="29sp"
        android:textColor="@color/warna10"
        />



    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/halo"
        android:text="Fajar!"
        android:layout_marginTop="10dp"
        android:textSize="29sp"
        android:textStyle="bold"
        android:textColor="@color/warna10"
        />

    <ImageView
        android:id="@+id/ic_gear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_gear" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/foto_profil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/halo"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg2"
        app:shapeAppearanceOverlay="@style/ImageViewMaskStyle" />



    <TextView
        android:id="@+id/telp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="082637412345"
        android:layout_below="@+id/foto_profil"
        android:layout_alignStart="@+id/foto_profil"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_telp"
        android:drawablePadding="10dp"/>






    <RelativeLayout
        android:layout_below="@+id/halo"
        android:layout_toEndOf="@+id/foto_profil"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:background="@drawable/bg_dashboard"
        android:paddingBottom="15dp"
        >


        <TextView
            android:id="@+id/statuspenghuni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penghuni Aktif"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/kamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statuspenghuni"
            android:text="Kamar A1"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/jatuhtempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kamar"
            android:layout_marginTop="10dp"
            android:text="Hingga 3/20/2025"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            />


        <TextView
            android:id="@+id/hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kamar"
            android:text="20 Hari"
            android:layout_marginTop="10dp"
          android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            />

        <ProgressBar
            android:id="@+id/progrespenyewa"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"

            android:layout_below="@+id/jatuhtempo"
            android:layout_margin="10dp"
            android:max="30"
            />


        <TextView
            android:id="@+id/biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progrespenyewa"
            android:text="Rp.2.000.000 / Bulan"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            />

    </RelativeLayout>








</RelativeLayout>