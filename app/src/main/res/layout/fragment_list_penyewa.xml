<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list_penyewa">


    <RelativeLayout
        android:id="@+id/notifikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bgradius15"
        android:backgroundTint="@color/white"
        android:elevation="7dp"
        android:layout_marginVertical="15dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ic_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notif"/>

        <TextView
            android:id="@+id/namapenghuni"
            android:layout_toEndOf="@+id/ic_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fajar Nugroho"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/warna10"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/masasewa"
            android:textSize="12sp"
            android:textColor="@color/warna10"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:text="*Detail Sewa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kamar"
            android:layout_below="@+id/namapenghuni"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/warna10"
            android:layout_toEndOf="@+id/ic_notif"
            android:text="kamar 02"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/masasewa"
            android:layout_below="@+id/kamar"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/warna10"
            android:layout_toEndOf="@+id/ic_notif"
            android:text="Masa Sewa Hingga 28/06/2025"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/masasewa"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/warna10"
            android:layout_toEndOf="@+id/ic_notif"
            android:text="Bergabung pada 01/06/2025"/>

    </RelativeLayout>

</RelativeLayout>