<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/namakost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fotokost"
            android:layout_margin="15dp"
            android:text="Nama"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/warna10"/>

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namakost"
            android:textSize="18sp"
            android:text="Nama"
            android:layout_marginBottom="8dp"
            android:textColor="@color/warna10"/>

        <EditText
            android:id="@+id/etNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/namakost"
            android:textSize="18sp"
            android:text="Nama"
            android:layout_marginBottom="8dp"
            android:textColor="@color/warna10"/>
    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNama"
            android:layout_margin="15dp"
            android:text="Email"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/warna10"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:text="Email"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/warna10"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/email"
            android:text="Email"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/warna10"/>
    </LinearLayout>

    <!-- Telepon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/telepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            android:layout_margin="15dp"
            android:text="Telepon"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/warna10"/>

        <TextView
            android:id="@+id/tvTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telepon"
            android:text="Telepon"
            android:textSize="18sp"
            android:textColor="@color/warna10"/>


        <EditText
            android:id="@+id/etTelepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/telepon"
            android:text="Telepon"
            android:textSize="18sp"
            android:textColor="@color/warna10"/>
    </LinearLayout>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Edit Button -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"/>

        <!-- Save & Cancel Container -->
        <LinearLayout
            android:id="@+id/containerSaveCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simpan"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/containerSaveCancel"
            android:text="Hapus Akun"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</LinearLayout>