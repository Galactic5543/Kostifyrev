<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Gabungkan Header dan Content dalam satu TableLayout -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:layout_marginBottom="8dp">

            <!-- Table Header -->
            <TableRow android:background="#25944C">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bulan"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Biaya"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bayar"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />
            </TableRow>

            <!-- Row 1 -->
            <TableRow android:layout_marginTop="8dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Januari"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 500.000"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 500.000"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lunas"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#25944C" />
                <Button
                    android:id="@+id/btndetail"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/bg_radius5"
                    android:backgroundTint="@color/warna6"
                    android:text="Lihat"
                    android:textSize="11sp"
                    android:textColor="@color/white" />
            </TableRow>

            <!-- Row 2 -->
            <TableRow android:layout_marginTop="8dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Februari"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 450.000"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Telat"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#F44336" />
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/bg_radius5"
                    android:backgroundTint="@color/warna6"
                    android:text="Lihat"
                    android:textSize="11sp"
                    android:textColor="@color/white" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</ScrollView>
