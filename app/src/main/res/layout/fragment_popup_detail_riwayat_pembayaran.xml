<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:background="@drawable/bg_round20dp"
    android:backgroundTint="@color/white"
    tools:context=".popup_detail_riwayat_pembayaran">


    <TextView
        android:id="@+id/textdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="8dp"
        android:text="Detail Pembayaran"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/warna10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/garis"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/textdetail"
        android:background="@drawable/garis" />


    <TextView
        android:id="@+id/textkamar"
        android:layout_below="@id/garis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Kamar A1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/warna10"/>

    <TextView
        android:id="@+id/textjatuhtempo"
        android:layout_below="@id/textkamar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Jatuh Tempo : 30/3/2025"
        android:textSize="15sp"
        android:textColor="@color/warna10"/>

    <TextView
        android:id="@+id/textpenyewa"
        android:layout_below="@id/textjatuhtempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:text="Penyewa : Fajar Nugroho"
        android:textSize="15sp"
        android:textColor="@color/warna10"/>


    <TextView
        android:id="@+id/textdurasisewa"
        android:layout_below="@id/textpenyewa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:text="Durasi Sewa : 1 Bulan"
        android:textSize="15sp"
        android:textColor="@color/warna10"/>

    <TextView
        android:id="@+id/textpembayaranbulan"
        android:layout_below="@id/textdurasisewa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Pembayaran Bulan : April"
        android:textSize="15sp"
        android:textColor="@color/warna10"/>

    <TextView
        android:id="@+id/textstatus"
        android:layout_below="@id/textpembayaranbulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Status Pembayaran : Telat"
        android:layout_marginVertical="8dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/warna10"/>

    <TextView
        android:id="@+id/texthargasewa"
        android:layout_below="@id/textstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"

        android:text="Rp. 1.500.000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/warna10"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_below="@id/texthargasewa"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp"
        android:id="@+id/txttutup"
        android:background="@drawable/bg_radius5"
        android:backgroundTint="@color/warna6"
        android:text="Tutup"
        android:layout_marginHorizontal="15dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        />



</RelativeLayout>