<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".Profil">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_profil"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/Profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:layout_margin="10dp"
        android:textSize="29sp"
        android:textStyle="bold"
        android:textColor="@color/warna10"
        />

    <ImageView
        android:id="@+id/ic_gear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_gear" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/foto_profil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/Profil"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg2"
        app:shapeAppearanceOverlay="@style/ImageViewMaskStyle"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/namauser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto_profil"
        android:layout_centerHorizontal="true"
        android:text="Fajar Nugroho"
        android:layout_margin="10dp"
        android:textSize="29sp"
        android:textStyle="bold"
        android:textColor="@color/warna10"
        />

    <LinearLayout
        android:id="@+id/containermenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_below="@id/namauser">


        <!-- ITEM 1: Info Kost -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:id="@+id/icinfokost"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                android:layout_margin="15dp"/>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toEndOf="@id/icinfokost">

                <TextView
                    android:id="@+id/mninfokost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Kost"
                    android:textColor="@color/warna10"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailinfokost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit info kost dan peraturan"
                    android:textColor="@color/warna10"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- ITEM 2: Pengajuan -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:id="@+id/icpenyewa"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pengajuan"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toEndOf="@id/icpenyewa">

                <TextView
                    android:id="@+id/titlepenyewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penyewa"
                    android:textColor="@color/warna10"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailpengajuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit info kost dan peraturan"
                    android:textColor="@color/warna10"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- ITEM 3: Sosial -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:id="@+id/icsosial"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sosial"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toEndOf="@id/icsosial">

                <TextView
                    android:id="@+id/titletagihan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tagihan"
                    android:textColor="@color/warna10"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailsosial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tagihan penyewa"
                    android:textColor="@color/warna10"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>



        <!-- ITEM 5: Pembayaran -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
           >

            <ImageView
                android:id="@+id/icpembayaran"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pembayaran"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toEndOf="@id/icpembayaran">

                <TextView
                    android:id="@+id/titlepembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran"
                    android:textColor="@color/warna10"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailpembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tagihan penyewa"
                    android:textColor="@color/warna10"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>





</RelativeLayout>