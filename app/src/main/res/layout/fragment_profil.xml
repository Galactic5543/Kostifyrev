<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".Profil">


    <RelativeLayout
        android:id="@+id/kontainermenutop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top"
        android:padding="10dp">


        <TextView
            android:id="@+id/textinformasikost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/warna10"/>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/iconakun"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/kontainermenutop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgprofil"
        android:src="@drawable/ic_profile"
        android:scaleType="centerInside"
        android:contentDescription="Btn1" />

    <TextView
        android:id="@+id/textnamaakun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconakun"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/warna10"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/nowhatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textnamaakun"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="3dp"
        android:text=""
        android:textColor="@color/warna10"
        android:textSize="12sp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kontainerkontent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bgradius15"
        android:backgroundTint="@color/white"
        android:layout_margin="15dp"
        android:layout_below="@+id/nowhatsapp"

        android:layout_marginHorizontal="4dp">

        <RelativeLayout
            android:id="@+id/kontainermnakun"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/mnakun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bgmenu"
                android:src="@drawable/ic_akun"
                android:scaleType="centerInside"
                android:contentDescription="Btn1" />

            <TextView
                android:id="@+id/textmnakun"
                android:layout_toEndOf="@+id/mnakun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/warna10"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textmnakun"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="@color/warna10"
                android:layout_toEndOf="@+id/mnakun"
                android:text="Informasi data  dan akun"/>

            <View
                android:id="@+id/arrow1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/ic_arrow" />

        </RelativeLayout>

        <View
            android:id="@+id/garis"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/kontainermnakun"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/garis" />

        <RelativeLayout
            android:id="@+id/kontainermnlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/garis"
            android:layout_marginTop="0dp"
            android:padding="15dp">


            <ImageButton
                android:id="@+id/mnlogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bgmenu"
                android:contentDescription="Btn1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logout" />

            <TextView
                android:id="@+id/textmnlogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/mnlogout"
                android:text="Logout"
                android:textColor="@color/warna10"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textmnlogout"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/mnlogout"
                android:text="Keluar akun"
                android:textColor="@color/warna10"
                android:textSize="12sp" />

            <View
                android:id="@+id/arrow2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/ic_arrow" />

        </RelativeLayout>



    </RelativeLayout>

    <!-- Iklan -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_below="@+id/kontainerkontent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />





</RelativeLayout>