<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/backgroundmotiflogin"
        android:scaleType="centerCrop"/>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kostify_logo"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/textotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:textSize="29sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textotpdeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kami telah mengirimkan email kepada Anda, silakan periksa email Anda dan masukkan kode OTP"
        android:layout_below="@+id/textotp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textSize="14sp"

        android:textColor="@color/black"/>





    <LinearLayout
        android:id="@+id/layoutxtotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textotpdeskripsi"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_margin="5dp"

        >

        <EditText
            android:id="@+id/txtotp1"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textotpdeskripsi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroundedittextlgn"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:hint="0"
            android:textColorHint="@color/abu"/>
        <EditText
            android:id="@+id/txtotp2"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textotpdeskripsi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroundedittextlgn"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:hint="0"
            android:textColorHint="@color/abu"/>

        <EditText
            android:id="@+id/txtotp3"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textotpdeskripsi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroundedittextlgn"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:hint="0"
            android:textColorHint="@color/abu"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="5dp"
            android:background="@color/warna7"
            android:baselineAlignBottom="true"/>

        <EditText
            android:id="@+id/txtotp4"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textotpdeskripsi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroundedittextlgn"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:hint="0"
            android:textColorHint="@color/abu"/>
        <EditText
            android:id="@+id/txtotp5"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textotpdeskripsi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroundedittextlgn"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:hint="0"
            android:textColorHint="@color/abu"/>

        <EditText
            android:id="@+id/txtotp6"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textotpdeskripsi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroundedittextlgn"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:hint="0"
            android:textColorHint="@color/abu"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnkonfirmasi"
        android:layout_width="287dp"
        android:layout_height="53dp"
        android:layout_below="@+id/layoutxtotp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/backgroundbutton"
        android:text="Konfirmasi"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:onClick="login"/>


</RelativeLayout>