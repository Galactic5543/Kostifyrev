<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardNotifikasi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:alpha="1"> <!-- Default transparansi (1 = normal, 0.5 = pudar) -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iconNotifikasi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notif"
            android:contentDescription="Icon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_toEndOf="@id/iconNotifikasi"
            android:layout_marginStart="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judulNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengajuan Kerusakan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/warna10" />

            <TextView
                android:id="@+id/detailNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fajar Nugroho mengajukan kerusakan"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/waktuNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Juni 2025 10:30"
                android:textSize="12sp"
                android:textColor="@color/abu"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
